{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}


<div class="container" id="center">
    <img src="/assets/img/burger.jpg">
    <h2>Eat-Da-Burger</h2>
</div>
<br>

<div class="container">
    <div class="row">
        <div class="col-md-6" id="burgers-list">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6" id="eaten-burgers">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<br>

<div class="container" id="center">
    <h6>Add a burger you want to eat and Click the "Submit" button</h6>
    <form action ="/burger/create" method="POST" class="create-form">
        <div class="form-group">
            <input type="text" id="burger_id" name="burger_name">
        </div>
        <button type="submit">Submit</button>
    </form>
</div>